<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" version="4" method="upgrade">
    <identifier>plg://site/mobile_text_replace</identifier>
	<name>Mobile Text Replace</name>
	<author>Gregorio Nuti</author>
	<creationDate>Apr 2023</creationDate>
	<copyright>Copyright Digigreg 2014-2023</copyright>
	<version>1.0.0</version>
    <license>GNU General Public License version 2 or later</license>
	<description>Replace text for mobile devices on Joomla websites.</description>
	<files>
		<folder>src</folder>
		<filename plugin="mobile_text_replace">mobile_text_replace.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field name="to_be_replaced" type="text" label="String to be replaced" description="" />
				
				<field name="to_be_printed" type="text" label="String to be printed" description="" />
                
			</fieldset>
		</fields>
	</config>
</extension>